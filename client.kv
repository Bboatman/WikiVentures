#:kivy 1.9.1


<Body>:
	size: 50, 50
	canvas:
		Ellipse:
			pos: (self.x, self.y)
			size: (self.size, self.size)
			source: self.source

<Enemy>:
    size: 32,32
    canvas:
        Rectangle:
            pos: (self.x, self.y)
            size: (self.size, self.size)
            source: './assets/spaceChicken.png'

<Spaceship>:
	size: 64, 64
	canvas:
		Rectangle:
            pos: (self.x, self.y)
            size: (self.size, self.size)
            source: './assets/spaceship_moving.gif'

<MenuScreen>
    AnchorLayout:
        anchor_x: "center"

        BoxLayout:
            orientation: "vertical"
            size_hint: (0.5, 1)
            spacing: 10

            Label:
                size_hint_y: 0.4
                text: "Welcome to WikiVentures!!!"
                valign: "bottom"
                bold: True
                font_size: 50
                padding: 0, 0

            AnchorLayout:
                anchor_x: "center"
                size_hint_y: 0.6

                BoxLayout:
                    size_hint: 0.5, 0.5
                    orientation: "vertical"
                    spacing: 10

                    Button:
                        halign: "center"
                        valign: "middle"
                        text: "Play"
                        on_press: root.manager.current = "pretutorial_screen"

                    Button:
                        halign: "center"
                        valign: "middle"
                        text: "Options"
                        on_press: root.show_popup()

<PreTutorialScreen>
    AnchorLayout:
        anchor_x: "center"
        size_hint_y: 0.6

        BoxLayout:
            size_hint: 0.5, 0.5
            orientation: "vertical"
            spacing: 10

            Label:
                size_hint_y: 0.4
                text: "Welcome to the Wikiverse, Cadet! Most people call me, Captain. Have you flown a spacecraft like this before?"
                valign: "bottom"
                bold: True
                font_size: 16
                padding: 10, 10

            Button:
                halign: "center"
                valign: "middle"
                text: "I'm an ace pilot."
                on_press: root.manager.current = "game_screen"

            Button:
                halign: "center"
                valign: "middle"
                text: "Show me the ropes, Captain."
                on_press: root.manager.current = "tutorial_screen"

<TutorialScreen>
    AnchorLayout:
        anchor_x: "center"
        size_hint_y: 0.6

        BoxLayout:
            size_hint: 0.5, 0.5
            orientation: "vertical"
            spacing: 10

            Label:
                text_size: root.width, None
                size: self.texture_size
                text: "Here's a quick run down of this spacecraft. You can use arrow keys or 'wasd' keys to control your spacecraft's movements. For quick interplanetary travel, fly to a planet and press 'k', activating hypertext speed to explore a new solar system within the Wikiverse. You'll receive a mission soon. That's all for now, Cadet!"
                valign: "middle"
                font_size: 16
                padding: 10, 10

            Button:
                halign: "center"
                valign: "middle"
                size_hint: (0.75, 1)
                text: "Thanks, Captain. I'm ready for take off!"
                on_press: root.manager.current = "game_screen"

<OptionsPopup>
    title: "Options"
    size_hint: 0.75, 0.75

    BoxLayout:
        orientation: "vertical"
        spacing: 20

        GridLayout:
            size_hint_y: 0.8
            cols: 2

        AnchorLayout:
            anchor_x: "center"
            size_hint: 1, 0.25

            Button:
                size_hint_x: 0.5
                text: "Save changes"
                on_press: root.dismiss()
