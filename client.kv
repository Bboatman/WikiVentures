#:kivy 1.9.1


<Body>:
	size: 50, 50
	canvas:
		Ellipse:
			pos: (self.x, self.y)
			size: (self.size, self.size)
			source: self.source

<Spaceship>:
	size: 50, 50
	canvas:
		Rectangle:
            pos: (self.x, self.y)
            size: (self.size, self.size)
            source: './assets/spaceship.png'

<Enemy>:
    size: 32,32
    canvas:
        Rectangle:
            pos: (self.x, self.y)
            size: (self.size, self.size)
            source: './assets/spaceChicken.png'
			

<GameScreen>:
    game_engine: game_widget_id

    Game:
        id: game_widget_id

<MenuScreen>
    AnchorLayout:
        anchor_x: "center"

        BoxLayout:
            orientation: "vertical"
            size_hint: (0.5, 1)
            spacing: 10

            Label:
                size_hint_y: 0.4
                text: "Welcome to WikiVentures!!!"
                valign: "bottom"
                bold: True
                font_size: 50
                padding: 0, 0

            AnchorLayout:
                anchor_x: "center"
                size_hint_y: 0.6

                BoxLayout:
                    size_hint: 0.5, 0.5
                    orientation: "vertical"
                    spacing: 10

                    Button:
                        halign: "center"
                        valign: "middle"
                        text: "Play"
                        on_press: root.manager.current = "game_screen"

                    Button:
                        halign: "center"
                        valign: "middle"
                        text: "Options"
                        on_press: root.show_popup()



<OptionsPopup>
    title: "Options"
    size_hint: 0.75, 0.75

    BoxLayout:
        orientation: "vertical"
        spacing: 20

        GridLayout:
            size_hint_y: 0.8
            cols: 2

        AnchorLayout:
            anchor_x: "center"
            size_hint: 1, 0.25

            Button:
                size_hint_x: 0.5
                text: "Save changes"
                on_press: root.dismiss()
